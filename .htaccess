# Enable rewrite engine
RewriteEngine On

# Set rewrite base
RewriteBase /

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Prevent directory listing
Options -Indexes

# Enable content compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript
</IfModule>

# Set security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options nosniff
    Header set X-Frame-Options SAMEORIGIN
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Main URL rewrites for AOTU
RewriteRule ^$ index-aotu.html [L]
RewriteRule ^servicios-importacion/?$ servicios.html [NC,L]
RewriteRule ^servicio/busqueda-proveedores-china/?$ busqueda-proveedores.html [NC,L]
RewriteRule ^servicio/gestion-pedido-china/?$ gestion-pedido.html [NC,L]
RewriteRule ^servicio/logistica-china-argentina/?$ logistica-internacional.html [NC,L]
RewriteRule ^servicio/tramites-aduana-argentina/?$ aduana-argentina.html [NC,L]
RewriteRule ^planes/?$ precios.html [NC,L]
RewriteRule ^quienes-somos/?$ quienes-somos.html [NC,L]

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Ensure HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]